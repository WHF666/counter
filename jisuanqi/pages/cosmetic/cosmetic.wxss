page{
  background-color: rgba(224, 213, 213, 0.541); 
  background-image: linear-gradient(335deg, rgba(252, 211, 164, 0.979) 23px, transparent 23px),
  linear-gradient(155deg, rgb(252, 224, 173) 23px, transparent 23px),
  linear-gradient(335deg, rgba(252,211,164,0.979) 23px, transparent 23px),
  linear-gradient(155deg, rgb(252,224,173) 23px, transparent 23px); 
  background-size: 58px 58px; 
  background-position: 0px 2px, 4px 35px, 29px 31px, 34px 6px;

}
input[type=digit]{
  border: 2px solid rgba(0, 0, 0, 0.404);
  border-right:none; 
  border-top: none;
  height:auto;
  font-size: 15px;
}
.view{
  width: 46%;
  height: auto;
  border: 2px solid rgba(0, 0, 0, 0.404);
}
.left{
  float: left;

}
.right{
  float: right;

}
.result{
  border: 2px solid rgba(0, 0, 0, 0.404);
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
  border-left: none;
}
.center{
  line-height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
}
.b{
  border: 1rpx solid rgba(0, 0, 0, 0.404);
  border-top:none; 
  position: relative;
  background: rgb(231, 118, 65);
  z-index: 100;
  color: white;
}
.v1{
  width: 100%;
  height: auto
}
.border{
  width: 220rpx;
  height:25px; 
  border-left: 2px solid rgba(0, 0, 0, 0.404);
}
.image{
  width: 10px;
  height: 10px;
  margin-top: 9px;
  margin-right:6px; 
}
.huobi{
  width: 70px;
}
.bd{
  margin-right: 40%;
  margin-top: 30rpx;
  background-color: rgb(161, 154, 156);
  color: white;
}
.bd::after{
  border: 0;
}
.aaa{
  height: 210rpx;
  border: none;
}
.bbb{
  height: 60rpx;
  border: 2px solid rgba(0, 0, 0, 0.404);  
  border-left: none;
  border-right: none;
  border-top: none;
}



